@using PagedList;
@using PagedList.Mvc;
@model IPagedList<blog_data.Post>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Crear nuevo post", "Create")
</p>
<div class="alert-warning error-messages-margin">@ViewData["error"]</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.First().Titulo);
        </th>
        
        <th>
            @Html.DisplayNameFor(model => model.First().Imagen)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().Categoria)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().Fecha)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Titulo)
        </td>
        
        <td>
            <a href=@item.Imagen>Imagen</a>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Categoria)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Fecha)
        </td>
        <td>
            @Html.ActionLink("Actualizar", "Update", new { id=item.Id }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.Id }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>

@Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
